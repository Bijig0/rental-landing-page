---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';

import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';

import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';

import appStoreImg from '~/assets/images/app-store.png';
import googlePlayImg from '~/assets/images/google-play.png';
import Footer from '~/components/widgets/Footer.astro';
import { getAsset, getPermalink } from '~/utils/permalinks';

const appStoreDownloadLink = 'https://github.com/onwidget/astrowind';
const googlePlayDownloadLink = 'https://github.com/onwidget/astrowind';

const metadata = {
  title: "Australia's Leading Queue Management System",
};
const myFooterData = {
  links: [
    {
      title: 'Company',
      links: [
        { text: 'For businesses', href: '/business' },
        { text: 'Legal', href: getPermalink('/terms') },
      ],
    },
  ],
  secondaryLinks: [
    { text: 'Terms', href: getPermalink('/terms') },
    { text: 'Privacy Policy', href: getPermalink('/privacy') },
  ],
  socialLinks: [
    { ariaLabel: 'X', icon: 'tabler:brand-x', href: '#' },
    { ariaLabel: 'Instagram', icon: 'tabler:brand-instagram', href: '#' },
    { ariaLabel: 'Facebook', icon: 'tabler:brand-facebook', href: '#' },
    { ariaLabel: 'RSS', icon: 'tabler:rss', href: getAsset('/rss.xml') },
    { ariaLabel: 'Github', icon: 'tabler:brand-github', href: 'https://github.com/onwidget/astrowind' },
  ],
  footNote: `
    <span class="w-5 h-5 md:w-6 md:h-6 md:-mt-0.5 bg-cover mr-1.5 rtl:mr-0 rtl:ml-1.5 float-left rtl:float-right rounded-sm bg-[url(https://onwidget.com/favicon/favicon-32x32.png)]"></span>
    Made by <a class="text-blue-600 hover:underline dark:text-gray-200" href="https://swiftqu.com/"> SwiftQu</a> · All rights reserved.
  `,
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      position="left"
      links={[
        { text: 'Features', href: '#:~:text=Join%20the%20line%20online' },
        {
          text: 'Testimonials',
          href: '#:~:text=%22%20SwiftQu%20made%20my,and%20user%2Dfriendly.%20%22',
        },
        { text: 'Download', href: '#:~:text=Download%20the%20SwiftQU%20app%20now!' },
      ]}
      actions={[
        {
          text: "I'm a business",
          href: '/business',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline=""
    image={{
      src: 'https://www.artprocessors.net/sites/default/files/styles/feature_image/public/media/images/tasteofsummer-16.jpg?itok=xsBZxDQa',
      alt: 'AstroWind Hero Image',
    }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white highlight">SwiftQu</span>: <br /> Never wait in <br /> line again <span
        class="hidden xl:inline"></span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline"> Experience Seamless Queuing: Fast, Efficient, and Hassle-Free.</span>
       Download now to jump the queue with SwiftQu and save your precious time!
    </Fragment>

    <div slot="actions" class="flex max-w-sm gap-4">
      <Button variant="link" href={appStoreDownloadLink}>
        <Image src={appStoreImg} alt="App Store Image" width={200} />
      </Button>

      <Button variant="link" href={googlePlayDownloadLink}>
        <Image src={googlePlayImg} alt="Google Play Image" width={200} />
      </Button>
    </div>
  </Hero2>

  <!-- Features3 Widget ************** -->

  <Features3
    id="features"
    title="Get your next table with SwiftQu"
    subtitle="From last-minute walk-ins to early-bird bookings, we can get you to the nearest free table as soon as you get hungry. And we’ve teamed up with top restaurants to get you seated – fast."
    columns={2}
  />

  <!-- Hero Widget 2 -->

  <!-- <Hero2
    tagline="Walk-ins & Virtual Queues"
    image={{
      src: 'https://www.artprocessors.net/sites/default/files/styles/feature_image/public/media/images/tasteofsummer-16.jpg?itok=xsBZxDQa',
      alt: 'AstroWind Hero Image',
    }}
  >
    <Fragment slot="title">Join the line online</Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Impromptu cocktail night or 10pm Thai cravings? Pick a restaurant near you and join their virtual queue, even if
        you aren't at their door yet. That's it – just track your progress in real time through the app and simply walk
        in.
      </span>
    </Fragment>
    <Hero2 /> -->

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[]}
    image={{
      src: 'https://images.unsplash.com/photo-1576153192621-7a3be10b356e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1674&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h5 class="text-sm font-bold text-gray-400 mb-2">WALK-INS & VIRTUAL QUEUES</h5>
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Join the line online</h3>
      <h4>
        Impromptu cocktail night or 10pm Thai cravings? Pick a restaurant near you and join their virtual queue, even if
        you aren't at their door yet. That's it – just track your progress in real time through the app and simply walk
        in.
      </h4>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[]}
    image={{
      src: 'https://media.istockphoto.com/id/956559528/photo/woman-enjoying-eating-burger-at-restaurant.jpg?s=612x612&w=0&k=20&c=PM-qW5UvF_1d6yr2HmJeUBU3LuISDys0lPFnebMwvjA=',
      alt: 'Vintage Image',
    }}
  >
    <Fragment slot="content">
      <h5 class="text-sm font-bold text-gray-400 mb-2">EXCLUSIVE OFFERS</h5>
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Treat yourself</h3>
      <h4>
        Happy hour, complimentary coffee, pint or a pancake – have a browse through all our offers today. Exclusively
        available through the Dojo app.
      </h4>
    </Fragment>
  </Content>

  <!-- Stats Widget ****************** -->

  <!-- <Stats
    title="Don't Miss Out"
    stats={[
      { amount: '20K', icon: 'tabler:download' },
      { amount: '18.5K', icon: 'tabler:users' },
      { amount: '4.7', icon: 'tabler:user-star' },
    ]}
  /> -->

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="What our users say"
    testimonials={[
      {
        testimonial: `I used SwiftQu at a popular café last weekend and it was a total game-changer. Instead of waiting in a long line, I could relax nearby and join the queue with just my phone. The app kept me updated on my queue status, which was really convenient. It turned what would have been a frustrating wait into a relaxed, enjoyable morning. I'm definitely looking for more places that use SwiftQu!`,
        name: 'Cary Kennedy',
        job: 'IOS User',
        image: {
          src: 'https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
          alt: 'Cary Kennedy Image',
        },
      },
      {
        testimonial: `SwiftQu made my shopping experience so much better! I visited a busy store during a sale, and thanks to SwiftQu, I didn't have to stand in a long line. I just joined the virtual queue and continued shopping around. The app notified me when it was my turn, and it was incredibly smooth and hassle-free. I wish more stores would start using this app. It's efficient and user-friendly.`,
        name: 'Josh Wilkinson',
        job: 'IOS User',
        image: {
          src: 'https://images.unsplash.com/flagged/photo-1570612861542-284f4c12e75f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
          alt: 'Josh Wilkinson Image',
        },
      },
      {
        testimonial:
          "Attending a concert with SwiftQu was fantastic. Usually, waiting in line for entry is the most tedious part, but with SwiftQu, I could hang out with my friends nearby and still keep track of my place in line. The app was super easy to use and kept us updated on our turn to enter. This made the whole experience much more enjoyable. I'm a big fan of SwiftQu now!",
        name: 'Sidney Hansen',
        job: 'IOS User',
        image: {
          src: 'https://images.unsplash.com/photo-1512361436605-a484bdb34b5f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
          alt: 'Sidney Hansen Image',
        },
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

