---
import Layout from '~/layouts/PageLayout.astro';

import Content from '~/components/widgets/Content.astro';
import Features from '~/components/widgets/Features.astro';
import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Steps2 from '~/components/widgets/Steps2.astro';

import Stats from '~/components/widgets/Stats.astro';

const metadata = {
  title: 'SaaS Landing Page',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      isBusiness
      position="left"
      links={[
        { text: 'Contact', href: '/business/contact' },
        { text: 'Pricing', href: '/business/pricing' },
      ]}
      actions={[
        {
          text: "I'm a user",
          href: '/',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="SaaS Web Demo"
    actions={[
      { variant: 'primary', target: '_blank', text: 'Book a Demo', href: '/contact' },
      { text: 'Request a Free Trial', href: '/contact' },
    ]}
    image={{
      src: 'https://assets-global.website-files.com/63f9282193c6e4356f476145/6440402ffe01003c2d44b11c_multi-device.png',
      alt: 'AstroWind Hero Image',
    }}
  >
    <Fragment slot="title">Manage queues and streamline operations</Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Optimize Wait Times, Harness Analytics, and Empower Data-Driven Strategies with
        <span class="font-semibold">SwiftQu</span></span
      >
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Why choose SwiftQu?"
    subtitle="SwiftQu's system is designed for both small businesses and enterprise level clients to help attract, seat and manage queuers efficiently"
    columns={2}
    items={[
      {
        title: 'Improve customer experience',
        description:
          'Reduce walkaways and have happier customers by transforming the queuing experience to a more superior service encounter',
        icon: 'tabler:layers-union',
      },
      {
        title: 'Reduce operational costs',
        description: `Cut down on staff workload and wasted manpower without compromising service quality through our automated system that manages customer flow more effectively`,
        icon: 'tabler:artboard',
      },
      {
        title: 'Seamless integration',
        description:
          'Effortlessly blend our system into your existing setup in less than 24 hours, ensuring a smooth operational flow tailored to your business needs.',
        icon: 'tabler:writing',
      },
      {
        title: 'Data collection and analysis',
        description: `Leverage in-depth analysis of queuing data to refine wait times, manage customer flow, and optimize your overall queue management strategy.`,
        icon: 'tabler:podium',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Enable self-check-in for waiting lines via iPad or QRCode',
        icon: 'tabler:wand',
      },
      {
        title: 'Capture customer information and data',
        icon: 'tabler:settings',
      },
      {
        title: 'Minimize frustration and human error',
        icon: 'tabler:template',
      },
      {
        title: 'Offer a multilingual interface',
        icon: 'tabler:carousel-horizontal',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1576153192621-7a3be10b356e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1674&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Check-in kiosk</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    items={[
      {
        title: 'Seamlessly organize the waitlist',
        icon: 'tabler:wand',
      },
      {
        title: 'Move, forward and reassign customers',
        icon: 'tabler:settings',
      },
      {
        title: 'Categorize customers and service lines',
        icon: 'tabler:template',
      },
      {
        title: 'Chat with customers in the dashboard',
        icon: 'tabler:carousel-horizontal',
