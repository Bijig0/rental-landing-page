    subtitle="Customer service is the cornerstone of SwiftQu's creation. That's why we built SwiftQu. Your needs are our priority"
    stats={[
      { title: 'Queuers Served', amount: '5,000+' },
      { title: 'Hours Saved', amount: '75,000+' },
      { title: 'Satisfied Partners', amount: '15+' },
      { title: 'G2 Reviews', amount: '4.8' },
    ]}
  />

