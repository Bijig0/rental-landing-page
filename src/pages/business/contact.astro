---
import ContactUs from '~/components/widgets/Contact.astro';
import Footer from '~/components/widgets/Footer.astro';
import Header from '~/components/widgets/Header.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Layout from '~/layouts/PageLayout.astro';
import businessFooterData from './businessFooterData';

const metadata = {
  title: 'Contact Us',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      isBusiness
      position="left"
      links={[
        { text: 'Contact', href: '/business/contact' },
      ]}
      actions={[
        {
          text: "I'm a user",
          href: '/',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    button="Book a Demo"
    title="Book a custom demo today!"
    subtitle="Reserve your tailored demo today to explore how our advanced queuing management system can supercharge your business!"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Additional Details',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Our support team typically responds within 24 business hours."
  />
  <Fragment slot="footer">
    <Footer {...businessFooterData} />
  </Fragment>
</Layout>
